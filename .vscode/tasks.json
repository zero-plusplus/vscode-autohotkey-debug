{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm:watch",
      "type": "shell",
      "isBackground": true,
      "command": "npm run watch",
      "problemMatcher": [
        {
          "pattern": {
              "regexp": "^\\s*([^:]+):(\\d+):(\\d+) - (error) (.+)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5,
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "> ts-node task\\/watch\\.ts",
            "endsPattern": "^\\[esbuild\\] completed at"
          }
        }
      ]
    },
    {
      "label": "npm:watch:public",
      "type": "shell",
      "isBackground": true,
      "command": "npm run watch:public",
      "problemMatcher": [
        {
          "pattern": {
              "regexp": "^\\s*([^:]+):(\\d+):(\\d+) - (error) (.+)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5,
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "> ts-node task\\/watch\\.ts",
            "endsPattern": "^\\[esbuild\\] completed at"
          }
        }
      ]
    },
  ],
}