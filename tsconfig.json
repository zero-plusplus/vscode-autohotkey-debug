{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
    "lib": [
			"ESNext",
			"DOM"
		],
		"types": [
			"node"
		],

		"isolatedDeclarations": true,
		"outDir": "build",
		"sourceMap": true,
		"strict": true,
		"declaration": true,
		"skipLibCheck": true,
		"inlineSourceMap": false,
		"noImplicitAny": false,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"preserveConstEnums": true,
		"esModuleInterop": true,
		"removeComments": false,
		"resolveJsonModule": true,
		"newLine": "crlf"
	},
	"include": [
		"scripts/**/*",
		"src/**/*",
		"test/**/*",
		"eslint.config.js",
		"jest.config.ts"
	]
}
